<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_newslist_itemtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Test title" />

    <TextView
        android:id="@+id/tv_newslist_itemsection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Test section" />

    <TextView
        android:id="@+id/tv_newslist_itemauthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Test item author" />

    <TextView
        android:id="@+id/tv_newslist_itemdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="5:34AM, 7/8/2017" />
</LinearLayout>